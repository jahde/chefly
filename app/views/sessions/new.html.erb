
<section class="container boost">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
                    <div class="titleblock text-center">
                        <%= image_tag("logo-orange.png", alt: "logo", height: 40) %><p>&nbsp;<p>
                        <% if @user.errors.any? %>
                        <ul>
                          <% @user.errors.full_messages.each do |error| %>
                            <li><%= error %></li>
                          <% end %>
                        </ul>
                        <% end %>
                        <h2>Sign In!</h2>
                        <p>Great things await...</p>
                    </div>
                    
                    <div class="col-md-4"></div>
                    
                    <div class="col-md-4 emailform">
                        <!-- <form name="sentMessage"  novalidate=""> -->
                        
                        <%= form_tag sign_in_path, {name: "sentMessage", novalidate:""} do %>

                            <div class="control-group">
                                <div class="controls">
                                    <!-- <p>Your E-mail</p>
                                    <input type="text" class="form-control" id="name" required="" data-validation-required-message="Enter Name"> -->

                                    <%= label_tag :email %>
                                    <%= email_field_tag :email, '', class: "form-control", id: "email"  %>


                                    <div class="help-block"></div></div>
                                </div>
                                
                                <div class="control-group">
                                    <div class="controls">

                                        <!-- <p>Your Password</p>
                                        <input type="email" class="form-control" id="email" required="" data-validation-required-message="Enter Email"> -->

                                        <%= label_tag :password %>
                                        <%= password_field_tag :password, '', class: "form-control", id: "password" %>

                                        <div class="help-block">
                                        </div>
                                    </div>
                                </div>

                                <%= submit_tag "Sign in!", class:"btn btn-default send" %><br>
                                    <%= link_to "Not a member yet? Sign up", sign_up_path %>
                                <% end %>
                                <!-- <button type="submit" class="btn btn-default pull-right send">Log In</button> -->
                        </form>
                                <p>&nbsp;</p>
                            </div>
                    <div class="col-md-4"></div>
                    
                </div>
            </div>
        </section>